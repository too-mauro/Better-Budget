<HTML>
<HEAD>
	<header>
    <%- include ("../partials/header") %>
</header>
</HEAD>
<BODY>

<fieldset class=mainwin>
	<form action="./line" method="post">
		<div id=win align="center">
			<h2>Pay a Line Item</h2>
			<input type=number min=0 step=1 name="poolID" id="poolID" required placeholder="Enter budget pool ID"><br>
			<input type=number min=0 step=1 name="budgetID" id="poolID" required placeholder="Enter budget ID"><br>
			<input type=text name="vendor" id="vendor" required placeholder="Enter vendor name"><br>
			<input type=text name="item" id="item" required placeholder="Enter item name"><br>
			<input type=number step=0.01 name="amount" id="amount" required placeholder="Enter amount spent (+) or refunded (-)"><br><br>
			<input type=submit value="Pay Line Item">
		</div>
	</form>
		<div align="center">
			<% if(message !== null){ %>
	          <%- message %>
	        <% } %>
	        <% if(error !== null){ %>
		      <p><%- error %></p>
		    <% } %><br><br>
		</div>
	</fieldset>
	<br><br><br>
